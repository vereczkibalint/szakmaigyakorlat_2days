<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/darkmode"
    tools:context=".NagyK">

    <Button
        android:id="@+id/fb"
        android:layout_width="120dp"
        android:layout_height="128dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/messenger"
        app:layout_constraintBottom_toTopOf="@+id/gmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gmail"
        android:layout_width="120dp"
        android:layout_height="128dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/gmail"
        app:layout_constraintBottom_toTopOf="@+id/phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fb" />

    <Button
        android:id="@+id/phone"
        android:layout_width="125dp"
        android:layout_height="108dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/ic_phone"
        app:layout_constraintBottom_toTopOf="@+id/berlesTovabb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gmail" />

    <Button
        android:id="@+id/berlesTovabb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="161dp"
        android:background="#00FFFFFF"
        android:text="Tovább a bérléshez"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>